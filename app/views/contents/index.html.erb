<div class="flex items-center">
  <h1 class="heading-1 grow">My Content</h1>

  <div class="p-4 flex flex-row space-x-4 items-center justify-stretch">
    <img alt="Filter" src="/img/filter.svg" class="primary-button max-h-10"/>

    <%= link_to 'New Content', new_content_path, class: 'primary-button' %>

    <%= link_to 'Quiz me', new_quiz_path, class: 'primary-button' %>
  </div>

</div>

<div class="flex flex-col space-y-4 items-center">
  <% @contents.each do |content| %>
    <%= link_to content, class: 'card w-full group' do %>
      <div class="flex flex-row items-center space-x-4">
        <div>
          <h2 class="heading-2"><%= content.title %></h2>
        </div>
        <div>
          <p class="text-sm font-light">Number of Questions: <%= content.questions.count %></p>
        </div>
        <div class="hidden group-hover:block max-h-6 ">
          <img alt="Filter" src="/img/delete.svg" class="hover:bg-slate-100, rounded-lg" />
        </div>
      </div>
    <% end %>
  <% end %>

  <% if @contents.empty? %>
  <% end %>
</div>

