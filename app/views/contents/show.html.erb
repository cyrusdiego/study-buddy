<div class="space-y-4 h-screen">
  <div class="h-1/2 p-4">
    <%= link_to 'Back', contents_path, class: "text-md text-neutral-500" %>

    <h1 class="heading-1"><%= @content.title %></h1>
    <div class="flex justify-center items-center w-full h-full">
      <iframe src="<%= url_for(@content.file) %>" width="100%" height="100%"></iframe>
    </div>
    <h1 class="heading-1">Questions</h1>
    <div class="flex flex-col justify-center items-center space-y-4">
      <ul class="flex flex-col space-y-4 w-full list-decimal list-inside">
        <% @content.questions.each do |question| %>
          <li class="card">
            <%= question.question %>
          </li>
        <% end %>
      </ul>
      <div>
        <%= button_to "Add Question", content_questions_path(@content), method: :post, class: "primary-button" %>
      </div>
    </div>
  </div>
</div>

