<div class="flex justify-center items-center">
  <div class="max-w-sm rounded overflow-hidden shadow-lg p-4">

    <h2 class="font-bold text-2xl mb-2">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex space-y-3 flex-col">
        <div class="flex flex-col font-thin text-lg grow">
          <%= f.label :email, class: 'grow' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded-md grow' %>
        </div>

        <div class="flex flex-col font-thin text-lg grow">
          <%= f.label :password, class: 'grow' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'rounded-md grow' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field font-thin text-baseline">
            <%= f.check_box :remember_me, class: 'rounded-sm' %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="grid grid-cols-2 gap-4 justify-center">
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
            <%= f.submit "Log in" %>
          </button>
          <%= render "devise/shared/links" %>
        </div>

      </div>
    <% end %>
  </div>
</div>



