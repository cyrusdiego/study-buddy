<div class="flex justify-center items-center">
  <div class="card">
    <h1 class="heading-1">Log in</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-col space-y-3">
        <div class="flex flex-col text-lg grow">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>
        </div>

        <div class="flex flex-col text-lg grow">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'text-field' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me, class: 'rounded-sm' %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="grid grid-cols-2 gap-4 justify-center">
          <button class="primary-button">
            <%= f.submit "Log in" %>
          </button>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>



