<div class="flex justify-center items-center">
  <div class="card w-full max-w-xl">
    <h1 class="heading-1">Log in</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-col space-y-4">
        <div class="field">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'text-field' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex flex-row items-center space-x-2">
            <%= f.check_box :remember_me, class: 'checkbox' %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <%= f.submit "Log in", class: 'primary-button' %>

        <div class="text-primary-700 flex-col flex space-y-4 items-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        </div>
      </div>
    <% end %>
  </div>
</div>



